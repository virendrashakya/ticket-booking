<style>
    .screen-header {
        text-align: center;
        display: block;
        background: #5f5f5f;
        font-size: 1.8em;
        /* font-family: sans-serif; */
        text-transform: capitalize;
        color: #b5b5b5;
    }
    .movie-title {
        font-size: 2.2em;
        font-weight: 500;
    }
</style>
<div class="container-fluid bg-darkgrey">
    <% Screen.all.includes(:shows).each do |screen| %>
        <div class="row screen-header">
            <span><%= screen.name %></span>
        </div>
        <div class="row">
            <% screen.shows.each do |show| %>
                <%= link_to "/screens/#{screen.id}/shows/#{show.id}", :class => "btn btn-sm" do %>
                    <div class="flex-container">
                        <span class="movie-title">
                            <%= show.movie_name%>
                        </span>
                        <br/>
                        Date: <%= show.start_time.strftime("%d %b %Y") %>
                        Timing: <%= show.start_time.strftime("%I:%M%p") %>
                    </div>
                <% end %>
                
            <% end %>
        </div>
    <% end %>
</div>