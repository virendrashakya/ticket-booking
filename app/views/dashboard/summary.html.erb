
<style>
    .screen-header {
        text-align: center;
        display: block;
        background: lightseagreen;
        font-size: 2.2em;
        /* font-family: sans-serif; */
        color: white;
    }
    .past-orders {
        background: red;
    }
    .upcomming-orders {
        background: blue;
    }
    .running_orders {
        background: purple;
    }
</style>
<div class="container-fluid bg-darkgrey">
    
    <div class="row screen-header">
        <span>Past Orders</span>
    </div>
    <div class="row">
        <% @past_orders.each do |order| %>
            <div class="flex-container">
                <%= order.show.movie_name%>
                <br/>
                <%= order.show.start_time.strftime("Start at %m/%d/%Y at %I:%M%p") %>
            </div>
        <% end %>
    </div>

    <div class="row screen-header">
        <span>Upcoming Orders</span>
    </div>
    <div class="row">
        <% @upcomming_orders.each do |order| %>
            <div class="flex-container">
                <%= order.show.movie_name%>
                <br/>
                <%= order.show.start_time.strftime("Start at %m/%d/%Y at %I:%M%p") %>
            </div>
        <% end %>
    </div>

    <div class="row screen-header">
        <span>Running Shows</span>
    </div>
    <div class="row">
        <% @running_orders.each do |order| %>
            <div class="flex-container">
                <%= order.show.movie_name%>
                <br/>
                <%= order.show.start_time.strftime("Start at %m/%d/%Y at %I:%M%p") %>
            </div>
        <% end %>
    </div>

    <%= link_to "Browse Shows...", screens_path, class:"row screen-header btn btn-primary" %>

</div>